<div class="container">
  <% if @user.photog? %>
        <%= render 'photog_show_card' %>
      <% else %>
        <%= render 'client_show_card' %>
  <% end %>

  <a href="https://unsplash.it/800/500" class="swipebox" title="My Caption">
    <img src="https://unsplash.it/600/400" alt="image">
  </a>
  <a href="https://unsplash.it/800/500" class="swipebox" title="My Caption">
    <img src="https://unsplash.it/600/400" alt="image">
  </a>


  <div class="row">
    <div class="col-xs-6 col-sm-2 col-sm-offset-4">
      <%= link_to "Back to index", users_path, class:"btn btn-primary" %>
    </div>
    <% if @user == current_user %>
      <div class="col-xs-6 col-sm-2">
        <%= link_to "Edit profile", edit_user_path(@user), class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<%= content_for(:after_js) do %>
  <script type="text/javascript">
  $(document).ready(function() {
        $( '.swipebox' ).swipebox();
  });
  </script>
<% end %>


