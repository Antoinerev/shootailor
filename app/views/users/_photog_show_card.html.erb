<div class="row">
  <div class="col-xs-6 col-xs-offset-3 col-sm-2 col-sm-offset-5">
    <div class="profile-picture">
      <%= image_tag '@user.picture' %>
    </div>

  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">
    <%= "#{@user.first_name}  #{@user.last_name}" %>
    <%= " - photographer" if @user.photog? %>
    <br>
    <%= "#{@user.email}" %>
    <br>
    Address:
    <%= "#{@user.address}" %>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 text-center">
    <h2>Portfolio</h2>
    <%= image_tag 'http://unsplash.it/300/200' %>

    <% @user.portfolios.each do |photo| %>
      <%= cl_image_tag photo.path, width: 300, height: 200, crop: :fill %>
    <% end %>

  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">
    About me:
    <p><%= "#{@user.bio}" %></p>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4 text-center" style="padding: 20px;">
    <%= "Typical hourly rate: #{@user.price} â‚¬" %>
    <br>
    <%= link_to "BOOK ME", new_user_booking_path(@user), class:"btn btn-danger" %>
  </div>
</div>
