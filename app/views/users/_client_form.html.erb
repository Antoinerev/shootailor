<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :address %>
  <%= f.input :avatar %>
  <%= f.input :bio %>
  <%= f.input :photog, as: :boolean, label: "become a photographer !" %>
  <%= f.button :submit %>
<% end %>
